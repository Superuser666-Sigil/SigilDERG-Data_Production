# Docker Environment Configuration Template
# Copy this file to .env and customize the values for your deployment

# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here

# Logging Configuration
LOG_LEVEL=INFO

# LLM Model Configuration
MODEL_PATH=/app/models/deepseek-coder-6.7b-instruct.Q4_K_M.gguf
LLM_MODEL_PATH=/app/models/deepseek-coder-6.7b-instruct.Q4_K_M.gguf
LLM_CONTEXT_SIZE=4096
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.1

# Crawl4AI Configuration
CRAWL4AI_HEADLESS=true
CRAWL4AI_BROWSER_PATH=/usr/bin/chromium

# Performance Tuning
# Uncomment and adjust based on your system resources
# DOCKER_MEMORY_LIMIT=8g
# DOCKER_CPU_LIMIT=4.0

# Model Directory (host system)
# Update this path to where your GGUF models are stored
HOME=/home/yourusername

# Pipeline Configuration
BATCH_SIZE=10
LIMIT=1000
